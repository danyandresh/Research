@model DomeApp.Models.BlogPost

@{
    ViewBag.Title = "Edit";
}

<p>@ViewBag.Title</p>

@{
    var editorAreaAttributes = new { @class = "expandableTextarea", rows = 20, columns = 20 };
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>BlogPost</legend>

        @Html.HiddenFor(model => model.Id)

        <div>
            @Html.LabelFor(model => model.Title)
            @Html.EditorFor(model => model.Title)
            @Html.ValidationMessageFor(model => model.Title)
        </div>

        <div>
            @Html.LabelFor(model => model.Excerpt)
            @Html.TextAreaFor(model => model.Excerpt, editorAreaAttributes)
            @Html.ValidationMessageFor(model => model.Excerpt)
        </div>

        <div>
            @Html.LabelFor(model => model.Content)
            @Html.TextAreaFor(model => model.Content, editorAreaAttributes)
            @Html.ValidationMessageFor(model => model.Content)
        </div>

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
}

@model PagedList<BlogPost>


<div id="posts">
    @foreach (var item in Model)
    {
        <div>
            <div class="display-title">
                <h3>
                    @Html.DisplayFor(m => item.Title)
                </h3>
            </div>

            <div class="display-area">
                @item.Excerpt.ToSafeMarkdown()
                [...]
            </div>

            @((item.Comments ?? Enumerable.Empty<Comment>()).Count()) comments

            <div class="display-actions">
                @if (@User.HasActionPermission(Request.RequestContext, "Edit"))
                {
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id })
                    @:|
                }

                @Html.ActionLink("Read Further", "Details", new { id = item.Id })

                @if (@User.HasActionPermission(Request.RequestContext, "Edit"))
                {
                    @:|
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                }
            </div>
        </div>
    }

    @Html.Partial("Pager", new Tuple<IPagedList, string,string>(Model, "Index", "posts"))
</div>

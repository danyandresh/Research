@model DomeApp.Models.BlogPost

@{
    ViewBag.Title = "Edit post";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <fieldset>
        @Html.HiddenFor(model => model.Id)

        <div>
            @Html.EditorFor(model => model.Title)
            @Html.ValidationMessageFor(model => model.Title)
        </div>

        <div>
            @Html.LabelFor(model => model.Excerpt)
            @Html.TextAreaFor(model => model.Excerpt, new { @class = "form-control", rows = 10 })
            @Html.ValidationMessageFor(model => model.Excerpt)
        </div>

        <div>
            @Html.LabelFor(model => model.Content)
            @Html.TextAreaFor(model => model.Content, new { @class = "form-control", rows = 30 })
            @Html.ValidationMessageFor(model => model.Content)
        </div>

        <input type="submit" value="Save" class="btn btn-primary active pull-right" />
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
}
